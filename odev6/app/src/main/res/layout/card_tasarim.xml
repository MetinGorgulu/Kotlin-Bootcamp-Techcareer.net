<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewMinimumSepet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-light"
                android:text="₺ - Minimum 40 TL - Çiğ Köfte"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewRestoranAd" />
            <androidx.cardview.widget.CardView
                android:id="@+id/imageViewResim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/imageViewResim1"
                    android:layout_width="254dp"
                    android:layout_height="143dp"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/restoran1" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/textViewRestoranAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-black"
                android:maxLines="1"
                android:text="Komagene Etsiz Çiğ Köf..."
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewResim" />

            <ImageView
                android:id="@+id/imageViewStar"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintEnd_toStartOf="@+id/textViewYildiz"
                app:layout_constraintTop_toBottomOf="@+id/imageViewResim"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/textViewYildiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="6dp"
                android:autoText="false"
                android:fontFamily="sans-serif-black"
                android:text="3.9"
                android:textAlignment="textEnd"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageViewStar"
                app:layout_constraintTop_toBottomOf="@+id/imageViewResim" />

            <TextView
                android:id="@+id/textViewSiparisSayi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:fontFamily="sans-serif-light"
                android:text="(100+)"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewYildiz"
                app:layout_constraintTop_toBottomOf="@+id/imageViewResim" />

            <TextView
                android:id="@+id/textViewSure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-light"
                android:text="50 dakika"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/imageViewClock"
                app:layout_constraintTop_toBottomOf="@+id/textViewMinimumSepet" />

            <ImageView
                android:id="@+id/imageViewClock"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewMinimumSepet"
                app:srcCompat="@drawable/clock" />

            <ImageView
                android:id="@+id/imageViewUcretsizGonderim"
                android:layout_width="125dp"
                android:layout_height="14dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/textViewSure"
                app:layout_constraintTop_toBottomOf="@+id/textViewMinimumSepet"
                app:srcCompat="@drawable/ucretsizgonderim" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>